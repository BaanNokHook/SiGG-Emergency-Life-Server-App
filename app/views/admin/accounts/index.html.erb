<div class="row-fluid  ui-sortable"> 
        <div style="" class="box span12">
          <div class="box-header" data-original-title="">
            <h2><i class="icon-user"></i><span class="break"></span>Accounts</h2>
            
          </div>
          <div class="box-content">
            <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid"><div class="row-fluid"><div class="span3"></div>
            

            <div class="span6"><div id="DataTables_Table_0_filter" class="dataTables_filter">
            <%= form_tag(@addon, :method => "get", class: "navbar-form", id: "search-form") do %>
                <div class="input-append">
                  <label style="line-height:27px!important;">Search:&nbsp;<%= text_field_tag :search, params[:search], placeholder: "Search addon" %></label>
                </div>
              <% end %>


            </div></div></div>




 
<table aria-describedby="DataTables_Table_0_info" id="DataTables_Table_0" class="table table-striped table-bordered bootstrap-datatable dataTable">
              <thead>
                <tr role="row">
                <th aria-label="Username: activate to sort column descending" aria-sort="ascending" style="width: 100px;" colspan="1" rowspan="1" aria-controls="DataTables_Table_0" tabindex="0" role="columnheader" class="sorting_asc">Date</th>
                <th aria-label="Username: activate to sort column descending" aria-sort="ascending" style="width: 200px;" colspan="1" rowspan="1" aria-controls="DataTables_Table_0" tabindex="0" role="columnheader" class="sorting_asc">Vendor</th>
                <th aria-label="Actions: activate to sort column ascending" style="width: 200px;" colspan="1" rowspan="1" aria-controls="DataTables_Table_0" tabindex="0" role="columnheader" class="sorting">Amount Credited</th>
                <th aria-label="Actions: activate to sort column ascending" style="width: 200px;" colspan="1" rowspan="1" aria-controls="DataTables_Table_0" tabindex="0" role="columnheader" class="sorting">Amount Debited</th>

                
                <th aria-label="Actions: activate to sort column ascending" style="width: 200px;" colspan="1" rowspan="1" aria-controls="DataTables_Table_0" tabindex="0" role="columnheader" class="sorting">Remark</th>
                </tr>
              </thead>   
              
            <tbody aria-relevant="all" aria-live="polite" role="alert">

    <% @accounts.each do |account| %>
      <tr class="odd">
        <td class="sorting_1"><%= account.date %></td>
        <td class="center"><%= account.vendor_id %></td>
        <% data=account.amount.to_i %>
        
        <td class="center"><% if data >0 %><%= number_to_currency(account.amount, precision: 2) %><% end %></td>
        
        
        <td class="center"><% if data <0 %><%= account.amount %><% end %></td>
        
        <td class="center"><%= account.remarks %></td>
        
      </tr>
    <% end %>
  </tbody>
              </table>
              <div class="span3"><%= link_to 'Add new', new_admin_account_path,:class=>"btn btn-info" %></div>
          
              <div class="row-fluid">
              <div class="span12 center">
              <div class="dataTables_paginate paging_bootstrap pagination">
              <%#= will_paginate @accounts , :renderer => BootstrapPagination::Rails  %>
              </div>
              </div>
              </div>
              </div>            
          </div>
        </div><!--/span-->
      </div>
      