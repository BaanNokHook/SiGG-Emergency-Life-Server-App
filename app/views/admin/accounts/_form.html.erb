<%= form_for([:admin,@account], :html => { :class => "form-horizontal"}) do |f| %>
<div class="row-fluid  ui-sortable">
<div style="" class="box span12">
<div class="box-header" data-original-title="">
            <h2><i class="icon-edit"></i><span class="break"></span>Sign Detail</h2>
            <!--<div class="box-icon">
              
              <a href="#" class="btn-close"><i class="icon-remove"></i></a>
            </div>-->
          </div>
  <% if @account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @account.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="box-content">
  <fieldset>
  <div class="control-group">
   <%= f.label :vendor ,:class=>"control-label"%>
   <div class="controls">
   <%= f.select(:vendor_id, Vendor.all.collect {|p| [ p.name, p.id ] }, { include_blank: 'select' }) %>
   </div>
   </div>
  <div class="control-group">
    <%= f.label :date ,:class=>"control-label" %>
    <div class="controls">
    <%= f.datetime_select :date %>
  </div>
  </div>
  <div class="control-group">
    <%= f.label :amount,:class=>"control-label" %>
    <div class="controls">
    <%= f.text_field :amount,:value=>"-#{@account.amount}",:class=>"span6" %>
  </div>
  </div>
  <div class="control-group">
    <%= f.label :remarks,:class=>"control-label" %>
    <div class="controls">
    <%= f.text_field :remarks,:class=>"span6" %>
  </div>
  </div>
  <div class="form-actions">
 <%= f.submit "Save",:class=>"btn btn-primary" %>
  </div>
  </fieldset>
<% end %>
</div>
</div>
</div>

