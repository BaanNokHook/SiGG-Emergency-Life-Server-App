<%= form_for([:admin,@user], :html => { :class => "form-horizontal"} ) do |f| %>
<div class="row-fluid sortable ui-sortable">
<div style="" class="box span12">
<div class="box-header" data-original-title="">
            <h2><i class="icon-edit"></i><span class="break"></span>Sign up</h2>
            <div class="box-icon">
              <a href="#" class="btn-setting"><i class="icon-wrench"></i></a>
              <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
              <a href="#" class="btn-close"><i class="icon-remove"></i></a>
            </div>
          </div>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="box-content">
  <fieldset>
  <div class="control-group">
  <%= f.label :email,:class=>"control-label" %>
  <div class="controls">
 <%= f.email_field :email, autofocus: true,:class=>"span6" %>
  </div>
  </div>

  <div class="control-group">
  <%= f.label :password ,:class=>"control-label"%>
  <div class="controls">
    <%= f.password_field :password, autocomplete: "off",:class=>"span6" %>
    </div>
  </div>
<div class="control-group">
  <%= f.label :password_confirmation ,:class=>"control-label" %>
  <div class="controls">
    <%= f.password_field :password_confirmation, autocomplete: "off" ,:class=>"span6" %>
    </div>
  </div>
</fieldset>
</div>
</div>
</div>
<div class="row-fluid sortable ui-sortable">
<div style="" class="box span12">
<div class="box-header" data-original-title="">
            <h2><i class="icon-edit"></i><span class="break"></span>Profile</h2>
            <div class="box-icon">
              <a href="#" class="btn-setting"><i class="icon-wrench"></i></a>
              <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
              <a href="#" class="btn-close"><i class="icon-remove"></i></a>
            </div>
          </div>

  
    <%= f.fields_for :userprofile do |userprofile_form| %>
    <div class="box-content">
  <fieldset>
    <div class="control-group">
     
        <%= userprofile_form.label :full_name,:class=>"control-label" %>
        <div class="controls">
        <%= userprofile_form.text_field :full_name ,:class=>"span6"%>
        </div>
    </div>
    <div class="control-group">
        <%= userprofile_form.label :medical_info ,:class=>"control-label" %>
        <div class="controls">
        <%= userprofile_form.text_field :medical_info ,:class=>"span6" %>
        </div>
    </div>
    <div class="control-group">
        <%= userprofile_form.label :address ,:class=>"control-label" %>
        <div class="controls">
        <%= userprofile_form.text_field :address ,:class=>"span6" %>
        </div>
        </div>
      </fieldset>
</div>
    <% end %>
  
       <div class="form-actions">
                <%= f.submit "Sign up",:class=>"btn btn-primary" %>
                
              </div>


</div>
</div>
<% end %>
