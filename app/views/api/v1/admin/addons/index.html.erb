
<%= form_tag(@addon, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search addon" %>
      <button class="btn" type="submit">Search<i class="icon-search"></i></button>
    </div>
  <% end %>

<h1>Listing addons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addons.each do |addon| %>
      <tr>
        <td><%= addon.name %></td>
        <td><%= link_to("Show", {:controller=>:addons,:action=>:show, :id=>addon}) %></td>
        <td><%= link_to 'Edit', edit_api_v1_admin_addon_path(addon) %></td>
        <td><%= link_to 'Destroy', {:controller=>:addons,:action=>:destroy, :id=>addon}, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Addon', new_api_v1_admin_addon_path %>

<%= will_paginate @vendors %>
