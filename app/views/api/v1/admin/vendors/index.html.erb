<%= form_tag(@vendor, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search vendor" %>
      <button class="btn" type="submit">Search<i class="icon-search"></i></button>
    </div>
  <% end %>

<h1>Listing vendors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.name %></td>

        <td><%= link_to("Show", {:controller=>:vendors,:action=>:show, :id=>vendor}) %></td>
        <td><%= link_to 'Edit', edit_api_v1_admin_vendor_path(vendor) %></td>
        <td><%= link_to 'Destroy', {:controller=>:vendors,:action=>:destroy, :id=>vendor}, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vendor', new_api_v1_admin_vendor_path %>
 <%= will_paginate @vendors %>